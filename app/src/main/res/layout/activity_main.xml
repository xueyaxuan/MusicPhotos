<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_title"
    android:background="@drawable/main_background">

    <!--内容布局-->
    <com.yasic.bubbleview.BubbleView
        android:id="@+id/bv_bubbleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:outlineProvider="background">

        <include
            android:id="@+id/incude_title"
            layout="@layout/titlebar_back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_300_dip"
            android:layout_marginTop="@dimen/dimen_119_dip"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_ToHoldYourHand"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dimen_20_dip"
                android:layout_marginLeft="@dimen/dimen_35_dip"
                android:layout_marginRight="@dimen/dimen_30_dip"
                android:layout_marginTop="@dimen/dimen_20_dip"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ll_showPhotosNameOne"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_70_dip"
                    android:layout_gravity="bottom"
                    android:alpha="0.4"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_photosName_one"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_70_dip"
                        android:gravity="center"
                        android:text="相册一"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/dimen_40_dip"
                        android:textStyle="italic" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_photos_one"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_70_dip"
                    android:layout_gravity="bottom"
                    android:background="#d2ffffff"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/edit_intput_photosOne"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_40_dip"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dimen_10_dip"
                        android:layout_marginRight="@dimen/dimen_10_dip"
                        android:layout_weight="1"
                        android:background="@drawable/shapa_edit_main"
                        android:hint="请输入新的名称"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/dimen_5_dip"
                        android:textSize="@dimen/dimen_20_dip" />

                    <TextView
                        android:id="@+id/tv_click_sure_photosOne"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_40_dip"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dimen_10_dip"
                        android:layout_weight="3"
                        android:background="@drawable/shapa_photos_text"
                        android:gravity="center"
                        android:text="取消"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/dimen_20_dip"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_IProteetYou"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dimen_20_dip"
                android:layout_marginLeft="@dimen/dimen_30_dip"
                android:layout_marginRight="@dimen/dimen_35_dip"
                android:layout_marginTop="@dimen/dimen_20_dip"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_showPhotosNameTwo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_70_dip"
                    android:layout_gravity="bottom"
                    android:alpha="0.4"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_photosName_two"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="相册二"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/dimen_40_dip"
                        android:textStyle="italic" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_photos_two"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_70_dip"
                    android:layout_gravity="bottom"
                    android:background="#d2ffffff"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/edit_intput_photosTwo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_40_dip"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dimen_10_dip"
                        android:layout_marginRight="@dimen/dimen_10_dip"
                        android:layout_weight="1"
                        android:background="@drawable/shapa_edit_main"
                        android:hint="请输入新的名称"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/dimen_5_dip"
                        android:textSize="@dimen/dimen_20_dip" />

                    <TextView
                        android:id="@+id/tv_click_sure_photosTwo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_40_dip"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dimen_10_dip"
                        android:layout_weight="3"
                        android:background="@drawable/shapa_photos_text"
                        android:gravity="center"
                        android:text="取消"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/dimen_20_dip"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_music_controller"
            android:layout_width="@dimen/dimen_565_dip"
            android:layout_height="@dimen/dimen_95_dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:alpha="0.3"
            android:background="@android:color/black"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rb_butn_last"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dimen_23_dip"
                android:layout_marginLeft="@dimen/dimen_45_dip"
                android:layout_marginRight="@dimen/dimen_45_dip"
                android:layout_marginTop="@dimen/dimen_23_dip"
                android:layout_weight="1"
                android:background="@drawable/icon_music_last"
                android:backgroundTint="@android:color/white"
                android:button="@null" />

            <TextView
                android:id="@+id/rb_butn_startORpause"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dimen_23_dip"
                android:layout_marginLeft="@dimen/dimen_45_dip"
                android:layout_marginRight="@dimen/dimen_45_dip"
                android:layout_marginTop="@dimen/dimen_23_dip"
                android:layout_weight="1"
                android:background="@drawable/icon_music_pause"
                android:backgroundTint="@android:color/white"
                android:button="@null"
                android:checked="false" />

            <TextView
                android:id="@+id/rb_butn_stop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dimen_23_dip"
                android:layout_marginLeft="@dimen/dimen_45_dip"
                android:layout_marginRight="@dimen/dimen_45_dip"
                android:layout_marginTop="@dimen/dimen_23_dip"
                android:layout_weight="1"
                android:background="@drawable/icon_music_stop"
                android:backgroundTint="@android:color/white"
                android:button="@null" />

            <TextView
                android:id="@+id/rb_butn_next"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dimen_23_dip"
                android:layout_marginLeft="@dimen/dimen_45_dip"
                android:layout_marginRight="@dimen/dimen_45_dip"
                android:layout_marginTop="@dimen/dimen_23_dip"
                android:layout_weight="1"
                android:background="@drawable/icon_music_next"
                android:backgroundTint="@android:color/white"
                android:button="@null" />
        </LinearLayout>

    </com.yasic.bubbleview.BubbleView>


</LinearLayout>
