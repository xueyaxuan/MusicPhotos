<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:layout_width="@dimen/dimen_200_dip"
        android:layout_height="@dimen/dimen_200_dip"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/icon_splash"
        android:layout_marginTop="@dimen/dimen_300_dip"/>

    <TextView
        android:id="@+id/tv_appName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100_dip"
        android:background="#ffffff"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_40_dip"
        android:textSize="@dimen/dimen_40_dip"
        android:textColor="#000000"
        android:text="致****的礼物"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/tv_target"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80_dip"
        android:background="#ffffff"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_390_dip"
        android:textSize="@dimen/dimen_22_dip"
        android:textColor="#000000"/>
</LinearLayout>